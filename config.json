{
	"name": "REDCap RAG",

	"namespace": "Stanford\\RedcapRAG",

	"description": "Enables retrieval-augmented generation (RAG) functionality in REDCap, allowing storage and querying of context documents using vector embeddings. Supports Redis or REDCap's Entity Table for flexible database management.",

	"documentation": "README.md",

	"authors": [
		{
			"name": "Irvin Szeto",
			"email": "irvins@stanford.edu",
			"institution": "Stanford University"
		},
        {
            "name": "Ihab Zeedia",
            "email": "ihabz@stanford.edu",
            "institution": "Stanford University"
        },
        {
            "name": "Jordan Schultz",
            "email": "jmschult@stanford.edu",
            "institution": "Stanford University"
        }
    ],

    "framework-version": 9,

	"permissions": [
		"redcap_module_system_enable",
		"redcap_module_project_enable",
		"redcap_module_save_configuration"
	],

	"enable-every-page-hooks-on-system-pages": false,

	"links": {
		"project": [

		],
		"control-center": [
            {
                "name": "RAG Debug",
                "icon": "fas fa-database",
                "url": "pages/ragit.php"
            }
		]
	},

	"no-auth-pages": [

	],

	"project-settings": [
		{
			"key": "enable-project-debug-logging",
			"name": "<b>Enable Debug Logging</b><br><i>(optional)</i> Requires installation and configuration of emLogger",
			"required": false,
			"type": "checkbox"
		}
	],

    "system-settings": [
        {
            "key": "enable-system-debug-logging",
            "name": "<b>Enable Debug Logging (system-wide)</b><br><i>(optional)</i> Requires installation and configuration of emLogger",
            "required": false,
            "type": "checkbox"
        },
        {
            "key": "use_vectordb",
            "name": "Use Vector Database (Pinecone) for RAG",
            "required": false,
            "type": "checkbox"
        },
        {
            "key": "pinecone_host",
            "name": "Pinecone Host (Dense) Endpoint <br><i>Required if Vector DB is enabled</i>",
            "required": false,
            "type": "text"
        },
        {
            "key": "pinecone_host_sparse",
            "name": "Pinecone Host (Sparse) Endpoint <br><i>Required if Vector DB is enabled</i>",
            "required": false,
            "type": "text"
        },
        {
            "key": "hybrid_dense_weight",
            "name": "Hybrid Search: Dense Weight (0–1)",
            "type": "text",
            "required": false,
            "default": "0.6"
            },
        {
            "key": "hybrid_sparse_weight",
            "name": "Hybrid Search: Sparse Weight (0–1)",
            "type": "text",
            "required": false,
            "default": "0.4"
        },
        {
            "key": "pinecone_api_key",
            "name": "Pinecone API Key <br><i>Required if Vector DB is enabled</i>",
            "required": false,
            "type": "text"
        }
    ],

    "compatibility": {
		"php-version-min": "",
		"php-version-max": "",
		"redcap-version-min": "",
		"redcap-version-max": ""
	}
}
